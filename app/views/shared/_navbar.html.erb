<header>
    <nav>
      <%= link_to root_path do %>
        <%= image_tag "LOGO.png", alt: "LXVAULT", width: "40px" %>
      <% end %>

      <%= link_to "ALL ITEMS", items_path, class: "secondary-button"%>


      <% if user_signed_in? %>
        <div class="dropdown">
          <button class="main-button dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            ACCOUNT
          </button>
          <ul class="dropdown-menu">
            <li><%= link_to "My bookings", bookings_path, class: "dropdown-item"%></li>
            <li><%= link_to "My items", my_items_path, class: "dropdown-item"%></li>
            <li><%= link_to "Booking requests", booking_requests_path, class: "dropdown-item"%></li>
            <li><%= link_to "Logout", destroy_user_session_path, data: { turbo_method: :delete }, class: "dropdown-item"%></li>
          </ul>
        </div>
      <% else %>
        <%= link_to "LOGIN", user_session_path, class: "main-button" %>
      <% end %>
    </nav>
</header>
