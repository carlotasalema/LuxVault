
<div class="container w-50 bg-light m-auto p-3 mt-5">
  <%= simple_form_for(@item) do |f| %>
    <%= f.input :name, class:'bg-light'%>
    <%= f.input :category, :collection => %w[clothing accessories jewelry] %>
    <%= f.input :price_per_day %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file %>
    <%= f.submit class:'main-button border-0' %>
    <%= link_to "Cancel", my_items_path, class: 'text-danger ps-3'%>
  <% end %>
</div>
